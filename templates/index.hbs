<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <title>Hefti</title>
    <link rel="stylesheet" href="/static/css/bootstrap.min.css" type="text/css" media="screen" title="no title" charset="utf-8">
    <script src="/static/js/jquery-3.4.1.min.js"></script>
    <script src="/static/js/hefti.js"></script>
  </head>
  <body>
    <div class="container">
      <button id="add" class="btn btn-success">New</button>
      <ul class="list-group">
        {{#each entrys}} 
        <li class="list-group-item">
          <div id="{{id}}">
            <div class="row">
              <div class="input-group mb-3">
                <div class="col-10">
                  <input id="title" type="text" class="form-control" value="{{title}}"></input>
                </div>
                <div class="col">
                  <input id="duration" type="number" class="form-control" value="{{spend_time}}"></input>
                </div>
              </div>
            </div>
            <div class="row">
              <div class="input-group mb-3">
                <div class="col-3">
                  <div class="form-group">
                    <select id="type" type="text" class="form-control" value="{{entry_type}}">
                      <option>Betriebliche TÃ¤tigkeit</option>
                      <option>Schulung</option>
                      <option>Berufschule</option>
                    </select>
                  </div>
                </div>
                <div class="col-7"></div>
                <div class="col-2">
                  <input id="date" type="text" class="form-control" value="{{logdate}}"></input>
                </div>
              </div>
            </div>
          </div>
        </li>
        {{/each}}
      </ul>
    </div>
  </body>
</html>
